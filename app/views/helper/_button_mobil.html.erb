<% left = locals[:left] %>
<% center = locals[:center] %>
<% right = locals[:right] %>
<% data = locals[:data] %>
<% button_id = locals[:id] %>

<div class="btn btn-primary", style="width: 100%;", data-toggle="<%= data %>">
    <h1 class="panel-title">
        <div class="alignleft"><div id="<%= button_id %>_left"><%= locals[:left] %></div></div>
        <div class="alignright"><div id="<%= button_id %>_right"><%= locals[:right] %></div></div>
        <div id="<%= button_id %>_center"><%= locals[:center] %></div>
    </h1>
</div>