<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-12">
        <%= render "helper/panel" , locals: {:title => "Operation: "+@operation.id.to_s, :body => "" } %>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <%= render "helper/panel" , locals: {:title => "Operation Type: ", :body => @operation.operation_type } %>
    </div>
    <div class="col-md-4">
        <%= render "helper/panel" , locals: {:title => "Address: ", :body => @operation.address.street } %>
    </div>
    
    <div class="col-md-4">
        <% link_to_chief = render "helper/button_link" , locals: {:link => @operation.chief,
                                            :center => @operation.chief.firstname+" "+@operation.chief.lastname } %>
        <%= render "helper/panel" , locals: {:title => "Chief: ", :body => link_to_chief } %>
    </div>
    
    <div class="col-md-4">
        <% link_to_department = render "helper/button_link" , locals: {:link => @operation.department,
                                            :center => @operation.department.name } %>
        <%= render "helper/panel" , locals: {:title => "Department: ", :body => link_to_department } %>
    </div>
    
    <div class="col-md-4">
        <% link_to_map = render "helper/button_link" , locals: {:link => @operation, :action => "map",
                                            :center => "Karte" } %>
        <%= render "helper/panel" , locals: {:title => "Map: ", :body => link_to_map } %>
    </div>
            
    <div class="col-md-4">
        <%= render "helper/panel" , locals: {:title => "Activ: ", :body => @operation.activ.to_s } %>
    </div>
    <div class="col-md-4">
        <%= render "helper/panel" , locals: {:title => "Date", :body => @operation.time_started.to_s } %>
    </div>
    
</div>


